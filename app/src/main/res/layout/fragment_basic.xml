<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Display -->
    <TextView
        android:id="@+id/textViewDisplay"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="10dp"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/numberButtonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Layout wrapper -->
    <LinearLayout
        android:id="@+id/numberButtonLayout"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintTop_toTopOf="parent">

        <!-- GridLayout -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:columnCount="4">

            <!-- Top Row -->
            <Button
                android:id="@+id/btnScientific"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SC"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnHistory"
                android:text="History"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="C"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnBackspace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/backspace"
                android:contentDescription="Backspace"
                app:layout_columnWeight="1" />


            <!-- Row 2 -->
            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="/"
                app:layout_columnWeight="1" />

            <!-- Row 3 -->
            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="*"
                app:layout_columnWeight="1" />

            <!-- Row 4 -->
            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                app:layout_columnWeight="1" />

            <!-- Last Row -->
            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="."
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+"
                app:layout_columnWeight="1" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="="
                app:layout_columnWeight="1" />
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>